@using System.Threading
@{
    ViewData["Title"] = SharedResource.Contacts;
    Layout = "~/Views/Shared/_Layout.cshtml";
    var requestCulture = Thread.CurrentThread.CurrentUICulture.TwoLetterISOLanguageName;
}

<style>
    .contact-page .upload-btn-wrapper {
        margin-top: 20px;
    }

    .contact-page textarea {
        margin-bottom: 0 !important;
    }
</style>

<div class="contact-page">
    <div class="breadcrumbs">
        <ul class="breadcrumbs__inner">
            <li class="breadcrumbs__item">
                <a href="/@requestCulture">@SharedResource.MainPage</a>
            </li>
            <li class="breadcrumbs__item breadcrumbs__item--active">
                <span>@SharedResource.Contacts</span>
            </li>
        </ul>
    </div>
    <div class="content">
        <div class="container">
            <h1>
                <span class="page-title">@SharedResource.Contacts</span>
            </h1>
            <h2>@Contacts.LeaveMessage</h2>
            <form class="feedback-frm" method="POST" action="/Mail/SendEmail" enctype="multipart/form-data">
                <div class="input-row">
                    <div class="input-wrap">
                        <label for="feedback-name">@Contacts.Name</label>
                        <input required id="feedback-name" name="name" type="text">
                    </div>
                    <div class="input-wrap">
                        <label for="feedback-email">@Contacts.Email</label>
                        <input required id="feedback-email" name="email" type="email">
                    </div>
                </div>
                <div class="input-wrap">
                    <label for="feedback-msg">@Contacts.Message</label>
                    <textarea maxlength="10000" required id="feedback-msg" name="body"></textarea>
                </div>

                <div class="upload-btn-wrapper input-wrap">
                    <button class="btn">
                        @Contacts.UploadFile
                    </button>
                    <input id="file-upload-control" type="file" multiple name="files" />
                </div>

                <ul id="file-list"></ul>

                <button style="margin-top: 20px; display: block;" class="btn--2 feedback-frm__submit" type="submit" id="contact-form-submit-button">@Contacts.Send</button>
            </form>
        </div>
    </div>
</div>